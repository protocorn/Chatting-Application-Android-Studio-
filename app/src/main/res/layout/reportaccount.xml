<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/color_corner"
        android:backgroundTint="#E8E8E8"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/bully"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bullying or Harrasment" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/scam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scam / Fraud" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/dislike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I Dislike This" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/slacticity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nudity or Sexual Activity" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/hate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hate Speech" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/spam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spam Account" />

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/violence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Violence or Disturbing Acts" />

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <RadioButton
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other" />

            <EditText
                android:id="@+id/other_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Please Specify"
                android:inputType="textShortMessage"
                android:visibility="gone" />
        </RadioGroup>

        <Button
            android:id="@+id/reportbtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#00ACC1"
            android:text="R E P O R T"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:icon="@android:drawable/ic_dialog_alert" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>